<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/editGameContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/edit_game_name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/edit_name_textField"
                android:lines="1"
                android:textColor="#000"
                android:inputType="textCapSentences"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/edit_game_genre"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/edit_genre_textField"
                android:maxLength="13"
                android:textColor="#000"
                android:inputType="textCapSentences"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/edit_game_photo"
                        android:src="@drawable/box_art"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="@string/edit_game_platform"/>

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:id="@+id/edit_platform_spinner"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="@string/edit_game_completion_percentage"/>

                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="48dp"
                            android:maxLength="3"
                            android:id="@+id/edit_completion_percentage_textField"
                            android:textColor="#000"
                            android:layout_marginLeft="5dp"
                            android:inputType="number"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="@string/edit_game_user_rating"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp">
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                style="?android:attr/ratingBarStyleSmall"
                                android:numStars="5"
                                android:stepSize="1"
                                android:isIndicator="false"
                                android:id="@+id/userRatingStars"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:id="@+id/edit_ign_label"
                            android:text="@string/edit_game_ign_rating"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/edit_ign_ratingTextview"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/edit_descriptionLayout">
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_description_label"
                    android:text="@string/edit_game_description"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_description_textField"
                    android:textSize="15sp"
                    android:maxLength="300"
                    android:textColor="#000"
                    android:layout_gravity="top"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:layout_alignBottom="@+id/edit_descriptionLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="7dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_description_textCount"
                    android:textSize="10sp"
                    android:text="0 "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="/ 300"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"

                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_game_IgnInfoButton"
                    android:text="@string/get_ign_info"
                    android:textColor="#fff"
                    android:background="@color/edit_game_button_states"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveGame"
                    android:layout_gravity="right"
                    android:text="@string/save_game"
                    android:textColor="#fff"
                    android:background="@color/edit_game_button_states"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>